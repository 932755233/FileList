<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>FileListServlet</servlet-name>
        <servlet-class>com.zzy.filelist.FileListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileListServlet</servlet-name>
        <url-pattern>/FileList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.zzy.filelist.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>StringFilter</filter-name>
        <filter-class>com.zzy.filelist.filter.StringFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StringFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>